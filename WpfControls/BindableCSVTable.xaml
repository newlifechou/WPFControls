<UserControl x:Class="WPFControls.BindableCSVTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <RichTextBox VerticalScrollBarVisibility="Visible" IsReadOnly="True">
            <RichTextBox.Document>
                <FlowDocument x:Name="doc">
                    <Table CellSpacing="0" BorderBrush="Blue" BorderThickness="0.5" Margin="5">
                        <TableRowGroup x:Name="tableRowGroup">
                            
                        </TableRowGroup>
                    </Table>
                </FlowDocument>
            </RichTextBox.Document>
        </RichTextBox>
    </Grid>
</UserControl>
