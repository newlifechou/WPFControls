<Window x:Class="WPFStyle46Test.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFStyle46Test"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="535">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFStyle46;component/Style/Tablet.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel >
        <Button Style="{StaticResource ButtonBasic}" Content="按钮演示"/>
        <CheckBox Style="{StaticResource CheckBoxBasic}" Content="CheckBox演示"/>
        <RadioButton Content="RadioButton演示" Style="{StaticResource RadioButtonBasic}"/>
        <TextBox Style="{StaticResource TextBoxBasic}" Text="文本框演示"/>
        <TextBox Style="{StaticResource TextBoxMultilineBasic}" Text="文本框演示"/>
        <TextBlock Style="{StaticResource TextBlockBasic}" Text="文本框演示"/>
        <DatePicker Style="{StaticResource DatePickerBasic}" />
        <ComboBox Style="{StaticResource ComboBoxBasic}"/>
    </StackPanel>
</Window>
